/var/log/asterisk/security
/var/log/asterisk/messages
/var/log/asterisk/full
/var/log/asterisk/*log {
	missingok
	notifempty
	sharedscripts
	compress
	delaycompress
	olddir /var/log/asterisk/old
	maxage 720
	size 64M
	postrotate
		/usr/sbin/asterisk -rx 'logger reload' > /dev/null 2> /dev/null 
	endscript
}
